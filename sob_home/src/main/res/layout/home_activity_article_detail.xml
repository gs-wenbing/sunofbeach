<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/include_bar"
        layout="@layout/layout_toolbar" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_header_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/include_bar"
        app:layout_constraintBottom_toBottomOf="@+id/include_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_60"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.zwb.lib_common.view.AvatarDecorView
            android:id="@+id/iv_header_avatar"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/ic_default_avatar"/>
        <TextView
            android:id="@+id/tv_header_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="gs_wenbing"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/iv_header_avatar"
            app:layout_constraintBottom_toBottomOf="@+id/iv_header_avatar"
            app:layout_constraintLeft_toRightOf="@+id/iv_header_avatar"
            />
        <TextView
            android:id="@+id/tv_header_follow"
            android:layout_width="70dp"
            android:layout_height="@dimen/dp_26"
            android:paddingBottom="1dp"
            android:gravity="center"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toTopOf="@+id/iv_header_avatar"
            app:layout_constraintBottom_toBottomOf="@+id/iv_header_avatar"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/blue_hollow_btn_selector"
            android:text="+ 关注"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="@dimen/dp_50"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_bar">

<!--        android:scrollbars="vertical"-->
<!--        android:scrollbarSize="3dp"-->
<!--        android:scrollbarThumbVertical="@color/colorPrimary"-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_reward"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textColor="@color/colorWarning"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:drawableLeft="@mipmap/ic_sob"
            android:drawablePadding="@dimen/dp_4"
            android:background="@drawable/red_hollow_btn_selector"
            android:textSize="@dimen/sp_12"
            android:text="打赏"/>
        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_reward"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_10"
            android:drawableLeft="@mipmap/ic_edit"
            android:drawablePadding="@dimen/dp_10"
            android:layout_toLeftOf="@+id/iv_list"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_grey_background"
            android:textSize="@dimen/sp_12"
            android:hint="写评价 ..."/>
        <ImageView
            android:id="@+id/iv_list"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_switch"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:src="@mipmap/ic_detail_list"/>
        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_star"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:src="@mipmap/ic_detail_reply"/>
        <TextView
            android:id="@+id/tv_reply_num"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:visibility="visible"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_2"
            android:textSize="8sp"
            android:layout_toLeftOf="@+id/iv_star"
            android:layout_marginRight="@dimen/dp_2"
            android:textColor="@color/white"
            android:background="@drawable/red_solid_btn_normal"
            tools:text="12"/>
        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_detail_star"
            android:layout_toLeftOf="@+id/iv_collection"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"/>
        <TextView
            android:id="@+id/tv_star_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_collection"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:textSize="8sp"
            tools:text="99"
            android:textColor="@color/textPrimary"/>
        <ImageView
            android:id="@+id/iv_collection"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:src="@mipmap/ic_detail_collect"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>