<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_6"
    android:layout_marginBottom="@dimen/dp_2"
    xmlns:tools="http://schemas.android.com/tools">
    <com.zwb.lib_common.view.AvatarDecorView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_46"
        android:layout_height="@dimen/dp_46"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_default_avatar"/>
    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar"
        tools:text="gs_wenbing"/>
    <TextView
        android:id="@+id/tv_createTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2022-05-14"
        android:textSize="@dimen/sp_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="完成度很高，哈哈，强"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/textPrimary"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="@+id/tv_nickname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_6"
        android:background="@drawable/shape_tag_background"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar">
        <TextView
            android:id="@+id/tv_reply_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/grey_light"
            android:textSize="@dimen/sp_12"
            tools:text="回复了我的评论："
            />
        <TextView
            android:id="@+id/tv_reply_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@+id/tv_reply_title"
            app:layout_constraintRight_toLeftOf="@+id/tv_reply_state"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_13"
            android:layout_marginRight="@dimen/dp_6"
            android:text="【 点击查看详情点击查看详情点击查看详情 】"
            />
        <TextView
            android:id="@+id/tv_reply_state"
            android:layout_width="50dp"
            android:layout_height="@dimen/dp_24"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"
            android:background="@drawable/green_solid_btn_normal"
            android:textSize="@dimen/sp_12"
            android:text="已读"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>